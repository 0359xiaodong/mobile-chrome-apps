<plugin xmlns="http://phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="chrome.storage"
    version="1.0.0">
  <engines>
    <engine name="cordova" version=">=2.4.0" />
  </engines>

  <name>Chrome Apps Storage API</name>

  <js-module src="storage.js" name="Storage">
    <clobbers target="chrome.storage" />
  </js-module>

  <platform name="android">
    <source-file src="src/android/ChromeStorage.java" target-dir="src/org/apache/cordova" />

    <config-file target="res/xml/config.xml" parent="/cordova/plugins">
      <plugin name="ChromeStorage" value="org.apache.cordova.ChromeStorage" />
    </config-file>
  </platform>

  <platform name="ios">
    <source-file src="src/ios/ChromeStorage.m" />
    <header-file src="src/ios/ChromeStorage.h" />

    <config-file target="config.xml" parent="/widget/plugins">
      <plugin name="ChromeStorage" value="ChromeStorage" />
    </config-file>
  </platform>
</plugin>
